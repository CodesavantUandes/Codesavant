{
  "name": "test-extension",
  "displayName": "test-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "test-extension.sendRequestToServer",
        "title": "Upload_File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-UML",
          "title": "Package Explorer Transformer",
          "icon": "resources/70577.png"
        }
      ]
    },
    "views": {
        "package-UML": [
          {
            "id": "package-dependencies",
            "name": "Dependencies"
          },
          {
            "id": "package-outline",
            "name": "Outline"
          } 
        ]
    },
    "viewsWelcome": [
      {
        "view": "package-dependencies",
        "contents": "Seneca.\n[Abrir Archivo](command:vscode.openFolder)\n[Clonar Repo](command:git.clone)\n[Subir Archivo](command:test-extension.sendRequestToServer)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "config.git.enabled && git.state == initialized && workbenchState == empty"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
